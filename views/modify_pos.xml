<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Modificar el texto del botón "Salir (sin cerrar sesión)" en PDV -->
        <template id="modify_pos_logout_text" inherit_id="point_of_sale.chrome">
            <xpath expr="//button[@class='select-logout btn btn-dark btn-lg']/span[@class='d-flex flex-grow-1 align-items-center']" position="replace">
                <span class="d-flex flex-grow-1 align-items-center">
                    Salir / Cerrar Sesión
                </span>
            </xpath>
        </template>

        <!-- Alternativa más simple: Buscar directamente por el texto -->
        <template id="modify_pos_logout_text_simple" inherit_id="point_of_sale.chrome">
            <xpath expr="//span[text()='Salir (sin cerrar sesión)']" position="replace">
                <span class="d-flex flex-grow-1 align-items-center">
                    Salir / Cerrar Sesión
                </span>
            </xpath>
        </template>

        <!-- Alternativa: Buscar por clase del botón -->
        <template id="modify_pos_logout_button_class" inherit_id="point_of_sale.chrome">
            <xpath expr="//button[contains(@class, 'select-logout')]//span" position="replace">
                <span class="d-flex flex-grow-1 align-items-center">
                    Salir / Cerrar Sesión
                </span>
            </xpath>
        </template>

    </data>
</odoo>