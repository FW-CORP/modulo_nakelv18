<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Kanban de INVENTARIO -->
    <record id="view_product_template_kanban_stock_label_ar" model="ir.ui.view">
        <field name="name">product.template.kanban.stock.label.AR</field>
        <field name="model">product.template</field>
        <!-- Vista base de inventario -->
        <field name="inherit_id" ref="stock.product_template_kanban_stock_view"/>
        <field name="arch" type="xml">
            <!-- Localiza el bloque que Odoo muestra solo
                 cuando corresponde enseÃ±ar existencias y reemplaza -->
            <xpath expr="//div[contains(@t-if,'show_on_hand_qty_status_button')]"
                   position="replace">
                <div groups="stock.group_stock_user"
                     t-if="record.show_on_hand_qty_status_button.raw_value">
                    Stock:
                    <field name="qty_available"/> <field name="uom_id"/>
                </div>
            </xpath>
        </field>
    </record>

    <!-- Lista editable de templates de productos -->
    <record id="view_product_template_tree_label_ar" model="ir.ui.view">
        <field name="name">product.template.tree.view.AR</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <!-- Cambiamos el texto de la columna "On hand" -->
            <xpath expr="//field[@name='qty_available']" position="attributes">
                <attribute name="string">En Stock</attribute>
            </xpath>
        </field>
    </record>

    <!-- Lista editable de variantes de productos -->
    <record id="view_product_product_tree_label_ar" model="ir.ui.view">
        <field name="name">product.product.tree.view.AR</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view"/>
        <field name="arch" type="xml">
            <!-- Cambiamos el texto de la columna "On hand" -->
            <xpath expr="//field[@name='qty_available']" position="attributes">
                <attribute name="string">En Stock</attribute>
            </xpath>
        </field>
    </record>
</odoo>