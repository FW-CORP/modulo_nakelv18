<odoo noupdate="0">
    <!-- Venta 10 % -->
    <record id="tax_internal_10_sale" model="account.tax">
        <field name="name">II 10 % (Venta)</field>
        <field name="amount">10</field>
        <field name="amount_type">percent</field>
        <field name="type_tax_use">sale</field>
        <field name="tax_group_id" ref="l10n_ar_internal_tax.tax_group_internal"/>
        <field name="l10n_ar_afip_tribute_code">4</field>
    </record>

    <!-- Compra 10 % -->
    <record id="tax_internal_10_purchase" model="account.tax">
        <field name="name">II 10 % (Compra)</field>
        <field name="amount">10</field>
        <field name="amount_type">percent</field>
        <field name="type_tax_use">purchase</field>
        <field name="tax_group_id" ref="l10n_ar_internal_tax.tax_group_internal"/>
        <field name="l10n_ar_afip_tribute_code">4</field>
    </record>

    <!-- Ejemplo de monto fijo por unidad -->
    <record id="tax_internal_fixed_sale" model="account.tax">
        <field name="name">II $25 por u.</field>
        <field name="amount">25</field>
        <field name="amount_type">fixed</field>
        <field name="type_tax_use">sale</field>
        <field name="tax_group_id" ref="l10n_ar_internal_tax.tax_group_internal"/>
        <field name="l10n_ar_afip_tribute_code">4</field>
    </record>
</odoo>
